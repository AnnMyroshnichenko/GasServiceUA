@page
@model RegisterModel
@{
    ViewData["Title"] = "Реєстрація";
}

<div class="auth__page-container">
    <div class="auth__form-container">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
            <div id="registrerFirstForm">
                <h2>Зареєструватися</h2>
                <hr />

                <div class="auth__form-field">
                    <label asp-for="Input.Surname">Прізвище</label>
                    <input asp-for="Input.Surname" class="form-control" autocomplete="username" aria-required="true" data-val="true" />  
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>
                </div>
                <div class="auth__form-field">
                    <label asp-for="Input.FirstName">Ім'я</label>
                    <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" data-val="true" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="auth__form-field">
                    <label asp-for="Input.Patronymic">По батькові</label>
                    <input asp-for="Input.Patronymic" class="form-control" autocomplete="username" aria-required="true" data-val="true" />
                    <span asp-validation-for="Input.Patronymic" class="text-danger"></span>
                </div>
                <div class="auth__form-field">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" data-val="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="auth__form-field">
                    <label asp-for="Input.Password">Пароль</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" data-val="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="hidden" id="registrerSecondForm">
                <h2>Зареєструватися</h2>
                <hr />
                <div class="auth__form-field">
                    <label asp-for="Input.City">Місто</label>
                    <input asp-for="Input.City" class="form-control" aria-required="true" data-val="true" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="auth__form-field">
                    <label asp-for="Input.CityDistrict">Район</label>
                    <input asp-for="Input.CityDistrict" class="form-control" aria-required="true" data-val="true" />
                    <span asp-validation-for="Input.CityDistrict" class="text-danger"></span>
                </div>
                <div class="auth__form-field">
                    <label asp-for="Input.Street">Вулиця</label>
                    <input asp-for="Input.Street" class="form-control" autocomplete="username" aria-required="true" data-val="true" />
                    <span asp-validation-for="Input.Street" class="text-danger"></span>
                </div>
                <div class="auth__form-field">
                    <label asp-for="Input.BuildingNumber"></label>
                    <input asp-for="Input.BuildingNumber" class="form-control" type="number" aria-required="true" data-val="true" />
                    <span asp-validation-for="Input.BuildingNumber" class="text-danger"></span>
                </div>
                <div class="auth__form-field">
                    <label asp-for="Input.AccountNumber">Номер лічильника</label>
                    <input asp-for="Input.AccountNumber" class="form-control" type="number" aria-required="true" data-val="true" />
                    <span asp-validation-for="Input.AccountNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="auth__form-buttons-container" id="registerBtnContainer">
                <button class="auth__form-button hidden" id="registerBack" onlick="return false;">Назад</button>
                <button class="auth__form-button" id="registerNext" onlick="return false;">Далі</button>
                <button class="auth__form-button hidden"  id="registerSubmit" type="submit">Зареєструватися</button>
            </div>         
            <h3 class="auth__register-login-link">Вже є акаунт? <a asp-page="./Login">Увійти</a></h3>
        </form>
    </div>
    <div class="auth__image">
        <img src="~/images/Register-login.png"/>
    </div> 
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/Registration.js"></script>
}
